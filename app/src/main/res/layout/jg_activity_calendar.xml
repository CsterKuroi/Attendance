            <Spinner
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:id="@+id/spinner" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
