<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/title_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/cell_padding_bottom"
        android:paddingLeft="@dimen/cell_padding_right"
        android:paddingRight="@dimen/cell_padding_right"
        android:paddingTop="@dimen/cell_padding_top"
        android:layout_alignBottom="@+id/setalarm">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤签到"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/title_font_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line2_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/line2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/cell_padding_bottom"
            android:paddingLeft="@dimen/cell_padding_left"
            android:paddingRight="@dimen/cell_padding_right"
            android:paddingTop="@dimen/cell_padding_top">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间    "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_font_blue"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在连接到时间服务器…"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/content_font_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/pic_size"
            android:layout_marginRight="@dimen/cell_padding_right"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/showmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/cell_padding_bottom"
            android:paddingLeft="@dimen/cell_padding_left"
            android:paddingRight="@dimen/cell_padding_right"
            android:paddingTop="@dimen/cell_padding_top">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="地点    "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_font_blue"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取中..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/content_font_size" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/cell_padding_bottom"
            android:paddingLeft="@dimen/cell_padding_left"
            android:paddingRight="@dimen/cell_padding_right"
            android:paddingTop="@dimen/cell_padding_top">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上班签到"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_font_blue"
                android:textSize="@dimen/content_font_size" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/cell_padding_top"
                    android:paddingBottom="@dimen/cell_padding_bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pic_size"
                        android:id="@+id/imageView6"
                        android:src="@drawable/sign_worktime"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上班时间"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/content_font_blue"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView10"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/cell_padding_top"
                    android:paddingBottom="@dimen/cell_padding_bottom">

                    <com.example.jogle.attendance.RoundImageView
                        android:layout_width="@dimen/pic_size"
                        android:layout_height="@dimen/pic_size"
                        android:id="@+id/imageView7"
                        android:src="@drawable/shot"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到时间"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/content_font_blue"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line" />

            <Button
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:text="签到"
                android:id="@+id/button4"
                android:layout_gravity="right"
                android:background="@color/content_font_blue"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/cell_padding_bottom"
            android:paddingLeft="@dimen/cell_padding_left"
            android:paddingRight="@dimen/cell_padding_right"
            android:paddingTop="@dimen/cell_padding_top">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下班签退"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_font_blue"
                android:textSize="@dimen/content_font_size" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/cell_padding_top"
                    android:paddingBottom="@dimen/cell_padding_bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pic_size"
                        android:id="@+id/imageView8"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/sign_xiabantime" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:30"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下班时间"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/content_font_blue"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView11"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/cell_padding_top"
                    android:paddingBottom="@dimen/cell_padding_bottom">

                    <com.example.jogle.attendance.RoundImageView
                        android:layout_width="@dimen/pic_size"
                        android:layout_height="@dimen/pic_size"
                        android:id="@+id/imageView9"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shot"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal"
                        android:password="false" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签退时间"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/content_font_blue"
                        android:textSize="@dimen/content_font_size"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line" />

            <Button
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:text="签退"
                android:id="@+id/button5"
                android:layout_gravity="right"
                android:background="@color/content_font_blue"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/setalarm"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置提醒"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/content_font_blue"
        android:textSize="@dimen/content_font_size" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="16dp"
        android:id="@+id/backButton3"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:paddingRight="30dp"
        android:paddingLeft="20dp"
        android:background="#00ffffff"
        android:layout_marginTop="13dp" />

</RelativeLayout>
